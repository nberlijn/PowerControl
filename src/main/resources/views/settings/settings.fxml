<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="475.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/null" fx:controller="nl.nberlijn.powercontrol.controllers.settings.SettingsController">
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="Device">
            <AnchorPane>
                <fx:include source="forms/device.fxml"/>
            </AnchorPane>
        </Tab>
        <Tab text="Commands">
            <Accordion fx:id="commandsAccordion"/>
        </Tab>
    </TabPane>
    <ButtonBar>
        <buttons>
            <Button mnemonicParsing="false" onAction="#handleOkButton" text="OK"/>
            <Button mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel"/>
        </buttons>
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>
    </ButtonBar>
</VBox>
