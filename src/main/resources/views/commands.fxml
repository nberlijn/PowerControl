<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="nl.nberlijn.powercontrol.controllers.CommandsController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button mnemonicParsing="false" onAction="#powerOn" prefWidth="125.0" text="Power on" GridPane.columnIndex="1">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#powerOff" prefWidth="125.0" text="Power off"
                GridPane.columnIndex="3">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#update" prefWidth="75.0" text="Update" GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
        <Button mnemonicParsing="false" onAction="#clean" prefWidth="75.0" text="Clean" GridPane.columnIndex="3"
                GridPane.rowIndex="1"/>
    </children>
</GridPane>
