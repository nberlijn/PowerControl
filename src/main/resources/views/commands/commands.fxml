<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="175.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/null" fx:controller="nl.nberlijn.powercontrol.controllers.commands.CommandsController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15.0" valignment="TOP" vgrow="SOMETIMES"/>
        <RowConstraints percentHeight="85.0" valignment="CENTER" vgrow="SOMETIMES"/>
    </rowConstraints>
    <fx:include source="menu.fxml" GridPane.rowIndex="0"/>
    <GridPane GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane fx:id="commandsPane" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button mnemonicParsing="false" onAction="#handleCommandButton" prefWidth="125.0" text="Power on" GridPane.columnIndex="1">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <fx:include source="status.fxml" GridPane.columnIndex="2"/>
            <Button mnemonicParsing="false" onAction="#handleCommandButton" prefWidth="125.0" text="Power off" GridPane.columnIndex="3">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleCommandButton" prefWidth="75.0" text="Update" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button mnemonicParsing="false" onAction="#handleCommandButton" prefWidth="75.0" text="Reboot" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button mnemonicParsing="false" onAction="#handleCommandButton" prefWidth="75.0" text="Clean" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        </GridPane>
        <ProgressIndicator fx:id="progressIndicator" maxHeight="100.0" maxWidth="100.0" progress="0.0" visible="false"/>
    </GridPane>
</GridPane>
